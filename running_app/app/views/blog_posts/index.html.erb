<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th>Content</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_posts.each do |blog_post| %>
      <tr>
        <td><%= blog_post.title %></td>
        <td><%= blog_post.user.email %></td>
        <td><%= blog_post.date %></td>
        <td><%= blog_post.content %></td>
        <%= image_tag blog_post.picture_url, width: '50%' if blog_post.picture.present? %>
        <td><%= link_to 'Running Post', blog_post %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %></td>
        <td><%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Yo, Wait, Hold IT' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Post', new_blog_post_path %>
